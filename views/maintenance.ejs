function approve(id) {
 Swal.fire({
  title: 'Are you sure?',
  text: "You are about to approve the task",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, approve!'
}).then((result) => {
  if (result.isConfirmed) {
      
    axios.post("/approve-task", {
        id: id
    }).then(data => {
         if(data.data.message){
	  Swal.fire(
      'Success!',
      data.data.message,
      'success'
    )
	 location.reload()
 }
 else if(data.data.error){
   Swal.fire(
      'Re Activated!',
      data.data.error,
      'error'
    )
 }
          
    })
   
  }
})   
}        </script>
